<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Upload your LinkedIn connections CSV</h1>
  <div id="flash"></div>
  <%= form_with url: "/csv", method: :post, multipart: true do |f| %>
    <div class="my-5">
      <%= f.file_field :file %>
      <%= f.submit "Upload", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>